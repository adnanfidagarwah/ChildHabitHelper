<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="MainActivityDataBinding">

        <import type="com.example.dummyproject.util.Status"/>
        <variable
            name="viewModel"
            type="com.example.dummyproject.ui.MainViewModel" />

        <variable
            name="networkResult"
            type="com.example.dummyproject.util.NetworkResult" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

        <include
            android:id="@+id/include"
            layout="@layout/app_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <include
            android:id="@+id/shimmer_view"
            layout="@layout/shimmer_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            hide="@{networkResult.status == Status.LOADING }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include" />


        <include
            android:id="@+id/error_view"
            layout="@layout/error_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            hide="@{networkResult.status == Status.ERROR }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            android:paddingVertical="@dimen/margin_16"
            android:scrollbars="none"
            hide="@{networkResult.status == Status.SUCCESS }"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include"
            tools:itemCount="10"
            tools:listitem="@layout/repository_item" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
